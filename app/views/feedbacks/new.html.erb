<div class="row justify-content-md-center">
  <div class="col-6">
    <br>
    <div class="card card-default">
      <div class="card-header">Leave a Feedback</div>
      <div class="card-body">
        <%= form_tag(create_feedback_url) do %>
          <div class="form-group">
            <%= label_tag :feedback %><br />
            <%= text_area_tag 'feedback[content]', '', autocomplete: "content", class: 'form-control', rows: 2, required: true %>
          </div>
          
          <div class="form-group">
            <%= submit_tag "Leave a Feedback", class: 'btn btn-success' %>
          </div>
        <% end %>
      </div>
    </div>
    <br>
  </div>
</div>